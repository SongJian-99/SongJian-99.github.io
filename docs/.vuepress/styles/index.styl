.content {
  font-size 30px
}

/* 隐藏空的 <ul> 标签 解决首页展示侧边栏的问题 */
ul:empty {
  display: none;
}

// 首页标签列表样式
.abstract-item {
  background-color: #acdcfd3d !important;  
  transition: all .5s;
}
.abstract-item:hover {
  transform:  scale(1.02);
  transition: all .5s;
}
// 页面样式
.page {
  background-color: #f2f4f5;
}
// 内容展示宽度设置
.page .page-title {
  max-width: 1000px !important
}
.content__default:not(.custom){
  max-width: 1000px !important  
}

// 左侧侧边栏样式
.sidebar {
  margin-right: 0.8rem
}
.sidebar-heading{
  font-size: 1.1em !important;
  font-weight: bold !important
}
.sidebar ul.sidebar-links > li{
  background-color: white !important;  
}
a.sidebar-link.active{
  background-color: #dbf0e5 !important;
  border-left: 5px solid #3eaf7c !important;
  border-right: none !important;
}
// 左侧侧边栏标题
.sidebar > .sidebar-links > li > a.sidebar-link {
  font-size: 1.5em !important;
  margin-left: -1em;
}

// 右侧侧边栏样式
.theme-container .sub-sidebar {
  overflow: hidden !important;
  padding-top: .5rem;
  right: 0.5rem !important;
  top: 3.3rem !important;
  bottom: auto !important;
  background-color: white;  
  width: 13rem !important
}

// 右侧侧边栏标题
.sub-sidebar-wrapper li{
  font-size: 1.1em !important;
  padding-top: 0rem !important;
  padding-bottom: 0rem !important;
  margin-top: -0.5rem !important;
  border-left: none !important;
}

// 右侧侧边栏字体颜色
.sub-sidebar-wrapper li a{
  color: #6d727a !important
}
.sub-sidebar-wrapper li.active a {
  font-weight: bold
  color: #3eaf7c !important
} 
.sub-sidebar-wrapper li:hover a{
  color: #3eaf7c !important
} 


// 中间内容区 start region
main section {
  background-color: white;
  margin-top: -1.0rem;
  margin-left: 0.4rem;
}

.page-edit {
  background-color: white;
  max-width: none !important;
  margin: 0 0 0 0.4rem !important;
  padding-right: 1rem !important;
}
.page-nav {
  background-color: white;
  max-width: none !important;
  margin: 0 0 0 0.4rem !important;
  padding-bottom: .1rem !important;
}
.comments-wrapper {
  padding: 0 !important;  
}
// end region
// 时间线样式
.timeline-wrapper .year {
  margin: 80px 0px 20px !important;
  font-size: 27px !important;
}
.timeline-wrapper .year-wrapper li {
    padding: 10px 20px 10px !important;
    border-bottom: 2px solid #999da06b !important;
    background: #c1c1e626;
    border-radius: 5rem;
    margin: 5px 0px;
    transition: all .5s;
}
.timeline-wrapper .year-wrapper li:hover {
    transform:  translate(50px,0);
    transition: all .5s;
}
.timeline-wrapper .year-wrapper li .date {
  width: 43px !important;
  font-size: 13px !important;
}
.timeline-wrapper .year-wrapper li .date:before {
    top: 22px !important;
    border: 1px solid !important;
}
.timeline-wrapper:after {
    background: skyblue !important;
}
.timeline-wrapper .desc:before, .timeline-wrapper .year:before {
  background: cadetblue !important;
}

// 首页副标题样式
.home-blog .hero .description {
  font-family: cursive
  font-size: 2rem !important
}

// 留言板和树洞页面自定义样式
.message-board, .treeholes{
  .page{
    background-color: white !important;
  }
}

// 摘要样式
blockquote {
  background-color: #fff5eb !important;
  border: 1px solid #fedab0;
  border-radius: 7px;
  border-left: none !important;
  color: #6d727a !important
}

// 滚动条
// 滚动条的宽度和高度。
::-webkit-scrollbar {
  width: 14px !important;
  height: 15px !important;
}
// 滚动条轨道的背景颜色。
::-webkit-scrollbar-track {
  background-color: #f2f4f5;
}
// 滚动条滑块的颜色、圆角和边框。
::-webkit-scrollbar-thumb {
  background-color: rgb(199, 196, 196)!important;
  // border-radius: 10px;
  // border: 4px solid rgb(103, 93, 93);
}
// 滚动条滑块在悬停时的颜色。
::-webkit-scrollbar-thumb:hover {
  background-color: rgb(178, 175, 175) !important;
}

